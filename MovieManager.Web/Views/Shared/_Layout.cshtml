<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewBag.Title - My ASP.NET Application</title>
    
    <!--Bootstrap-->
    <link href="~/Theme/css/bootstrap.min.css" rel="stylesheet" />
    <!--font awesome-->
    <link href="~/Theme/css/all.min.css" rel="stylesheet" type="text/css">
    <link href="https://fonts.googleapis.com/css?family=Nunito:200,200i,300,300i,400,400i,600,600i,700,700i,800,800i,900,900i" rel="stylesheet">

    <!-- Custom styles for this template-->
    <link href="~/Theme/css/sb-admin-2.min.css" rel="stylesheet">
</head>
<body id="page-top">
    <div id="wrapper" class="d-flex flex-row">
        @Html.Partial("_Navigation")
        <div id="content-wrapper" class="d-flex flex-column">


            @RenderBody()

            <footer>
                <p>&copy; @DateTime.Now.Year - My ASP.NET Application</p>
            </footer>

        </div>
        <hr />

    </div>

    <!-- Bootstrap core JavaScript-->
    <script src="~/Theme/js/jquery.min.js"></script>
    <script src="~/Theme/js/bootstrap.bundle.min.js"></script>

    <!-- Core plugin JavaScript-->
    <script src="~/Theme/js/jquery-easing/jquery.easing.min.js"></script>

    <!-- Custom scripts for all pages-->
    <script src="~/Theme/js/sb-admin-2.min.js"></script>

    <!-- Page level plugins -->
    <script src="~/Theme/js/chart.js/Chart.min.js"></script>

    <!-- Page level custom scripts -->
    <script src="~/Theme/js/chart-area-demo.js"></script>
    <script src="~/Theme/js/chart-pie-demo.js"></script>

    @RenderSection("scripts", required: false)
</body>
</html>
